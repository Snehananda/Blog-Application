{% extends "base.html.twig" %}

{% block body %}

<h4 id="title-head">Blogs</h4>

    <div id="blog-list">
        <a href="/blogs/create" class="btn btn-secondary btn-blog-create" role="button">Create Blog</a>

        {% for blog in blogs %}
        
          
            <div class="blog-item">
                <h1 class="title">{{blog.title}}</h1>
                <h5 class="author">{{blog.user.getName()}}</h5>
                <h5 class="time">{{blog.date|date('Y-m-d H:i:s')}}</h5>
                <hr style="margin-top: -20px;">
                <p>{{blog.content}}</p>
                <a href="/blog/{{blog.Id}}">Read more.</a>
            </div>


        {% endfor %}

        </div>


{% endblock %}